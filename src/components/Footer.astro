import WhatsAppSvg from "./svg/WhatsAppSvg.astro"
import EmailSvg from "./svg/EmailSvg.astro"
import InstagramSvg from "./svg/InstagramSvg.astro"
---

<section
  id='contact'
  class='flex flex-col justify-between bg-[#82c75c] py-4 first:gap-y-2 rounded-t-2xl md:h-[300px]'
>
  <div
    class='flex flex-col items-center md:mx-24 md:flex-row md:justify-between md:pt-12 text-[#04303b] mb-8 h-full'
  >
    <img
      loading='lazy'
      class='w-32 mb-4'
      src='/images/logo.png'
      alt='Logical Sistemas'
    />

    <div class='flex flex-col font-thin md:gap-y-2 md:text-md'>
      <p class='font-semibold text-principal text-[#04303b]'>
        <span>Sede principal:</span> Pradera - Colombia
      </p>
      <p class='flex items-center'>
        <WhatsAppSvg />
        &nbsp WhatsApp 1: &nbsp 
        <a
          target='_blank'
          class='font-semibold decoration-solid decoration-green-500 underline-offset-1 hover:text-[#e8e454] transition-all duration-300 ease-in-out'
          href='https://wa.me/+573002442377?text=Hola%2C%20quiero%20saber%20m%C3%A1s%20sobre%20Landak'
        >
          +57 300 244 2377</a
        >
      </p>
      <p class='flex items-center '>
        <EmailSvg />
        <span class='pl-2'>Email:</span> &nbsp <a href="mailto:consejoafrovallecito@gmail.com" class="font-semibold hover:text-[#e8e454] transition-all duration-300 ease-in-out">consejoafrovallecito@gmail.com</a>
      </p>

      <p class='flex items-center'>
        <InstagramSvg />
        &nbsp Instagram: 
        <a
          target='_blank'
          class='pl-2 font-semibold hover:text-[#e8e454] transition-all duration-300 ease-in-out'
          href='https://www.instagram.com/landak_casafinca/'
        >
          Finca landak</a
        >
      </p>
    </div>
  </div>
  <p class='text-center text-[12px] font-light text-black-400 dark:text-white'>
    ©2025 Finca Landak. Todos los derechos reservados. Created By:
    <a
      class='underline text-black/70 dark:text-gray-100'
      href='https://www.linkedin.com/in/iv%C3%A1n-andr%C3%A9s-lop%C3%A9z-g%C3%B3mez-1b2a1b187/'
      target='_blank'>Andrés López</a
    >. Designed By: <a
      class='underline text-black/70 dark:text-gray-100'
      href='https://www.linkedin.com/in/santiago-navas-calero-55468910a/'
      target='_blank'>Santiago Navas</a
    >
  </p>
</section>